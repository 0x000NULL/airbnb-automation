# =============================================================================
# Airbnb/VRBO Hosting Automation - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=airbnb
POSTGRES_PASSWORD=airbnb_secret
POSTGRES_DB=airbnb_automation
DATABASE_URL=postgresql+asyncpg://airbnb:airbnb_secret@localhost:5432/airbnb_automation

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# Generate a secure key: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# RentAHuman API
# -----------------------------------------------------------------------------
RENTAHUMAN_API_KEY=rah_your_api_key_here
RENTAHUMAN_BASE_URL=https://api.rentahuman.ai
# Set to "true" for development/testing without real API calls
RENTAHUMAN_MOCK_MODE=true

# -----------------------------------------------------------------------------
# Google OAuth (optional)
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# SendGrid Email (optional - falls back to logging)
# -----------------------------------------------------------------------------
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@yourapp.com

# -----------------------------------------------------------------------------
# Twilio SMS (optional - falls back to logging)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# -----------------------------------------------------------------------------
# Stripe Payments (optional)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# AWS S3 File Storage (optional)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_S3_REGION=us-west-2

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Set to "development" or "production"
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
